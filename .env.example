# GLADIUS Enterprise System - Environment Configuration Template
# ================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains sensitive credentials

# ==================== GLADIUS NATIVE AI ====================
GLADIUS_ENABLED=true
GLADIUS_MODEL_PATH=./GLADIUS/models/gladius_primary

# ==================== SENTINEL GUARDIAN ====================
SENTINEL_ENABLED=true
SENTINEL_LEARNING_LOOP=true
# Turing-safe kill password (hash stored, not plain text)
SENTINEL_KILL_PASSWORD=YourSecureKillPassword

# ==================== LEGION AGENTS ====================
LEGION_ENABLED=true
# Security: WebSocket secret key for LEGION backend
LEGION_SECRET_KEY=generate-random-64-character-key-for-legion-websockets

# ==================== SMTP EMAIL CONFIGURATION ====================
# Required for email escalation and consensus notifications
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SSL=true
SMTP_USER=your-email@artifactvirtual.com
SMTP_PASSWORD=YourSecureEmailPassword
EMAIL_FROM=your-email@artifactvirtual.com
ESCALATION_EMAIL=admin@artifactvirtual.com
DEV_TEAM_EMAILS=dev1@artifactvirtual.com,dev2@artifactvirtual.com
EXECUTIVE_EMAILS=exec@artifactvirtual.com

# ==================== DISCORD INTEGRATION ====================
# Required for consensus voting and notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
DISCORD_CHANNEL_ID=1234567890123456789
DISCORD_CONSENSUS_CHANNEL_ID=1327890703250096168
DISCORD_BOT_TOKEN=YourDiscordBotToken

# ==================== DASHBOARD SECURITY ====================
# CRITICAL: These MUST be set - no defaults allowed for security
SECRET_KEY=generate-a-random-64-character-secret-key-here-use-openssl-rand-hex-32
DASHBOARD_SECRET_KEY=generate-another-random-64-character-secret-key-here
JWT_SECRET_KEY=generate-jwt-secret-key-here-use-openssl-rand-hex-32

# Dashboard authentication (change from defaults!)
DASHBOARD_ADMIN_USERNAME=admin
DASHBOARD_ADMIN_PASSWORD=ChangeThisSecurePassword

# Development login (DISABLE in production - set to false)
DASHBOARD_ALLOW_DEV_LOGIN=false
DASHBOARD_DEV_PASSWORD=OnlyUseInDevEnvironment

# ==================== AI MODEL API KEYS ====================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key

# Hugging Face
HUGGINGFACE_TOKEN=hf_your_huggingface_token

# ==================== SOCIAL MEDIA PLATFORMS ====================
# Twitter/X
TWITTER_ENABLED=true
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# LinkedIn
LINKEDIN_ENABLED=true
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# Facebook
FACEBOOK_ENABLED=false
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id

# Instagram
INSTAGRAM_ENABLED=false
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_ACCOUNT_ID=your-instagram-account-id

# Medium
MEDIUM_ENABLED=false
MEDIUM_API_KEY=your-medium-api-key

# ==================== PRODUCTIVITY & INTEGRATIONS ====================
# Notion
NOTION_API_KEY=secret_your-notion-integration-token
NOTION_DATABASE_ID=your-notion-database-id

# News API
NEWSAPI_KEY=your-newsapi-key

# ==================== MONITORING & ANALYTICS ====================
# Grafana
GRAFANA_API_KEY=your-grafana-api-key
GRAFANA_URL=http://localhost:3000

# Prometheus
PROMETHEUS_PORT=9090

# ==================== DATABASE ====================
DATABASE_URL=sqlite:///./gladius.db
# For PostgreSQL: postgresql://user:password@localhost/gladius

# ==================== REDIS CACHE ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YourRedisPassword

# ==================== CELERY TASK QUEUE ====================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==================== SYSTEM PATHS ====================
# Leave these as default unless you have specific requirements
# The system auto-detects the correct paths
# GLADIUS_ROOT=/path/to/gladius  # Optional: override auto-detection

# ==================== DEVELOPMENT/DEBUG ====================
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# ==================== SECURITY NOTES ====================
# 1. Generate secure random keys:
#    - Linux/Mac: openssl rand -hex 32
#    - Python: python -c "import secrets; print(secrets.token_hex(32))"
#
# 2. Never commit this file with real credentials
#
# 3. Use strong passwords (minimum 16 characters, mixed case, numbers, symbols)
#
# 4. Rotate credentials regularly
#
# 5. Disable dev login in production (DASHBOARD_ALLOW_DEV_LOGIN=false)
#
# 6. Use environment-specific .env files (.env.production, .env.development)
