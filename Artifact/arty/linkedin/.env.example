# LinkedIn API Access Credentials

# OAuth 2.0 Authentication
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:3000/callback

# Access Token (Generated after OAuth flow)
LINKEDIN_ACCESS_TOKEN=your_access_token_here

# Organization/Company Page URN (urn:li:organization:XXXXXXXX)
LINKEDIN_ORGANIZATION_URN=

# Person URN (for personal posts - urn:li:person:XXXXXXXX)
LINKEDIN_PERSON_URN=

# Database Configuration
DATABASE_PATH=./data/linkedin.db

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Scheduling Configuration
SCHEDULER_ENABLED=true
SCHEDULER_CHECK_INTERVAL=60000
TIMEZONE=America/New_York

# Post Configuration
DEFAULT_POST_VISIBILITY=PUBLIC
AUTO_DELETE_MEDIA_AFTER_POST=true
MEDIA_STORAGE_PATH=./media

# Rate Limiting (LinkedIn API limits)
RATE_LIMIT_POSTS_PER_DAY=100
RATE_LIMIT_POSTS_PER_HOUR=25

# Cleanup Configuration
CLEANUP_ENABLED=true
CLEANUP_OLD_MEDIA_DAYS=30
CLEANUP_OLD_LOGS_DAYS=30

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=5000

# API Configuration
LINKEDIN_API_VERSION=202501
LINKEDIN_API_BASE_URL=https://api.linkedin.com/v2
