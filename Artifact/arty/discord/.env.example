# Discord Bot Token (Get from https://discord.com/developers/applications)
DISCORD_TOKEN=your_bot_token_here

# Discord Application/Client ID
CLIENT_ID=your_client_id_here

# Discord Guild/Server ID (for testing guild-specific commands)
GUILD_ID=your_guild_id_here

# Bot Configuration
PREFIX=!
OWNER_ID=your_discord_user_id_here

# Database Configuration
DATABASE_PATH=./data/bot.db

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Webhook URLs (Optional - for logging/notifications)
WEBHOOK_LOG_URL=
WEBHOOK_MODERATION_URL=
WEBHOOK_ANNOUNCEMENTS_URL=
WEBHOOK_WELCOME_URL=

# Music Bot Configuration (Optional)
YOUTUBE_API_KEY=
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# External APIs (Optional)
WEATHER_API_KEY=
GIPHY_API_KEY=
IMGUR_CLIENT_ID=

# Feature Flags
ENABLE_MUSIC=true
ENABLE_ECONOMY=true
ENABLE_LEVELING=true
ENABLE_AUTOMOD=true
ENABLE_WELCOME_MESSAGES=true
ENABLE_LOGGING=true

# Auto-Moderation Settings
AUTOMOD_MAX_MENTIONS=5
AUTOMOD_MAX_EMOJI=10
AUTOMOD_SPAM_THRESHOLD=5
AUTOMOD_SPAM_INTERVAL=5000

# Economy Settings
ECONOMY_DAILY_REWARD=100
ECONOMY_WORK_REWARD_MIN=50
ECONOMY_WORK_REWARD_MAX=200
ECONOMY_CURRENCY_NAME=coins
ECONOMY_CURRENCY_SYMBOL=ðŸª™

# Leveling Settings
LEVELING_XP_MIN=15
LEVELING_XP_MAX=25
LEVELING_XP_COOLDOWN=60000
LEVELING_MESSAGE_ENABLED=true

# Music Settings
MUSIC_MAX_QUEUE_SIZE=100
MUSIC_DEFAULT_VOLUME=50
MUSIC_TIMEOUT=300000

# Moderation Settings
MOD_LOG_CHANNEL_ID=
WARN_THRESHOLD_KICK=3
WARN_THRESHOLD_BAN=5
MUTE_ROLE_NAME=Muted

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_DIR=./backups

# Rate Limiting
RATE_LIMIT_COMMANDS=5
RATE_LIMIT_WINDOW=10000

# Status Configuration
STATUS_TYPE=WATCHING
STATUS_TEXT=the server | !help
STATUS_ROTATION=true
