# Enterprise Automation Suite - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# BUSINESS INFORMATION
# ============================================================================
BUSINESS_NAME=Your Company Name
BUSINESS_INDUSTRY=Technology
BUSINESS_TARGET_AUDIENCE=B2B SaaS
BUSINESS_BRAND_VOICE=professional
BUSINESS_TIMEZONE=America/New_York

# ============================================================================
# AI ENGINE CONFIGURATION
# ============================================================================
AI_PROVIDER=openai  # options: openai, anthropic, cohere, local
AI_MODEL=gpt-4
AI_API_KEY=your-openai-api-key-here
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Anthropic (alternative)
ANTHROPIC_API_KEY=your-anthropic-key-here

# Cohere (alternative)
COHERE_API_KEY=your-cohere-key-here

# Local Model Settings
LOCAL_MODEL_PATH=/path/to/local/model
LOCAL_MODEL_TYPE=llama  # options: llama, mistral, gpt4all

# ============================================================================
# CONTEXT ENGINE (Persistent Memory)
# ============================================================================
CONTEXT_DB_PATH=~/.enterprise_automation/context.db
CONTEXT_MAX_TOKENS=100000  # Before first truncation
CONTEXT_SUMMARY_TOKENS=10000  # Size of summary after truncation
CONTEXT_ENABLE_REFLECTION=true
CONTEXT_REFLECTION_INTERVAL=3600  # seconds

# ============================================================================
# ERP SYSTEMS
# ============================================================================

# SAP
SAP_ENABLED=false
SAP_API_URL=https://your-sap-instance.com
SAP_CLIENT=your-client-id
SAP_USERNAME=your-username
SAP_PASSWORD=your-password
SAP_SYNC_INTERVAL=3600

# Odoo
ODOO_ENABLED=false
ODOO_URL=https://your-odoo-instance.com
ODOO_DATABASE=your-database-name
ODOO_USERNAME=your-username
ODOO_PASSWORD=your-password
ODOO_SYNC_INTERVAL=3600

# NetSuite
NETSUITE_ENABLED=false
NETSUITE_ACCOUNT_ID=your-account-id
NETSUITE_CONSUMER_KEY=your-consumer-key
NETSUITE_CONSUMER_SECRET=your-consumer-secret
NETSUITE_TOKEN_ID=your-token-id
NETSUITE_TOKEN_SECRET=your-token-secret
NETSUITE_SYNC_INTERVAL=3600

# Microsoft Dynamics 365
DYNAMICS_ENABLED=false
DYNAMICS_URL=https://your-org.crm.dynamics.com
DYNAMICS_CLIENT_ID=your-client-id
DYNAMICS_CLIENT_SECRET=your-client-secret
DYNAMICS_TENANT_ID=your-tenant-id
DYNAMICS_SYNC_INTERVAL=3600

# Salesforce
SALESFORCE_ENABLED=false
SALESFORCE_USERNAME=your-username
SALESFORCE_PASSWORD=your-password
SALESFORCE_SECURITY_TOKEN=your-security-token
SALESFORCE_CONSUMER_KEY=your-consumer-key
SALESFORCE_CONSUMER_SECRET=your-consumer-secret
SALESFORCE_SYNC_INTERVAL=3600

# ============================================================================
# SOCIAL MEDIA PLATFORMS
# ============================================================================

# Twitter/X
TWITTER_ENABLED=false
TWITTER_API_KEY=your-api-key
TWITTER_API_SECRET=your-api-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-access-token-secret
TWITTER_BEARER_TOKEN=your-bearer-token
TWITTER_MAX_POSTS_PER_DAY=5

# LinkedIn
LINKEDIN_ENABLED=false
LINKEDIN_CLIENT_ID=your-client-id
LINKEDIN_CLIENT_SECRET=your-client-secret
LINKEDIN_ACCESS_TOKEN=your-access-token
LINKEDIN_ORGANIZATION_ID=your-org-id
LINKEDIN_MAX_POSTS_PER_DAY=3

# Facebook
FACEBOOK_ENABLED=false
FACEBOOK_PAGE_ID=your-page-id
FACEBOOK_ACCESS_TOKEN=your-access-token
FACEBOOK_APP_ID=your-app-id
FACEBOOK_APP_SECRET=your-app-secret
FACEBOOK_MAX_POSTS_PER_DAY=4

# Instagram
INSTAGRAM_ENABLED=false
INSTAGRAM_ACCOUNT_ID=your-account-id
INSTAGRAM_ACCESS_TOKEN=your-access-token
INSTAGRAM_MAX_POSTS_PER_DAY=2

# YouTube
YOUTUBE_ENABLED=false
YOUTUBE_CLIENT_ID=your-client-id
YOUTUBE_CLIENT_SECRET=your-client-secret
YOUTUBE_REFRESH_TOKEN=your-refresh-token
YOUTUBE_CHANNEL_ID=your-channel-id

# TikTok
TIKTOK_ENABLED=false
TIKTOK_CLIENT_KEY=your-client-key
TIKTOK_CLIENT_SECRET=your-client-secret
TIKTOK_ACCESS_TOKEN=your-access-token

# Reddit
REDDIT_ENABLED=false
REDDIT_CLIENT_ID=your-client-id
REDDIT_CLIENT_SECRET=your-client-secret
REDDIT_USERNAME=your-username
REDDIT_PASSWORD=your-password
REDDIT_USER_AGENT=Enterprise Automation Bot 1.0

# ============================================================================
# DISCORD INTEGRATION
# ============================================================================
DISCORD_ENABLED=false
DISCORD_BOT_TOKEN=your-bot-token
DISCORD_WEBHOOK_URL=your-webhook-url
DISCORD_CHANNEL_ID=your-channel-id
DISCORD_NOTIFY_POSTS=true
DISCORD_NOTIFY_ERRORS=true
DISCORD_NOTIFY_ERP_SYNC=true

# ============================================================================
# SCHEDULER SETTINGS
# ============================================================================
SCHEDULER_ENABLED=true
SCHEDULER_CHECK_INTERVAL=60  # seconds
SCHEDULER_MAX_CONCURRENT_POSTS=10
SCHEDULER_RETRY_FAILED=true
SCHEDULER_RETRY_ATTEMPTS=3
SCHEDULER_QUEUE_SIZE=100

# ============================================================================
# DASHBOARD SETTINGS
# ============================================================================
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=5000
DASHBOARD_SECRET_KEY=your-secret-key-here-change-this
DASHBOARD_ENABLE_AUTH=true
DASHBOARD_ADMIN_USERNAME=admin
DASHBOARD_ADMIN_PASSWORD=your-secure-password-here
DASHBOARD_SESSION_TIMEOUT=3600

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
DATABASE_URL=sqlite:///~/.enterprise_automation/enterprise.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=~/.enterprise_automation/logs/enterprise.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Sentry (optional)
SENTRY_ENABLED=false
SENTRY_DSN=your-sentry-dsn

# ============================================================================
# REDIS (for queue management)
# ============================================================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# SECURITY
# ============================================================================
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
ENABLE_ENCRYPTION=true
ENCRYPTION_KEY=your-encryption-key-here

# ============================================================================
# FEATURES
# ============================================================================
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_AUTO_SCHEDULING=true
ENABLE_ANALYTICS_TRACKING=true
ENABLE_ERP_SYNC=true
ENABLE_SOCIAL_POSTING=true
ENABLE_REFLECTION=true  # AI self-reflection and improvement
ENABLE_TOOL_CALLING=true  # AI can call tools/functions
