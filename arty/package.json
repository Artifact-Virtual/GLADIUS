{
  "name": "arty",
  "version": "1.0.0",
  "description": "Extensible automation framework for managing multiple platforms (Discord, LinkedIn, and more)",
  "private": true,
  "workspaces": [
    "discord",
    "linkedin",
    "telegram",
    "shared"
  ],
  "scripts": {
    "discord:install": "cd discord && npm install",
    "discord:deploy": "cd discord && npm run deploy-commands",
    "discord:start": "cd discord && npm start",
    "discord:dev": "cd discord && npm run dev",
    "linkedin:install": "cd linkedin && npm install",
    "linkedin:start": "cd linkedin && npm start",
    "linkedin:post": "cd linkedin && npm run post",
    "linkedin:schedule": "cd linkedin && npm run schedule",
    "linkedin:cleanup": "cd linkedin && npm run cleanup"
  },
  "keywords": [
    "bot",
    "framework",
    "discord",
    "linkedin",
    "telegram",
    "automation",
    "modular",
    "social-media"
  ],
  "author": "Gladius",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
